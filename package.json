    "code-example": "2.0.0",
    "kkt": "6.5.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "tsbb": "1.7.9"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
